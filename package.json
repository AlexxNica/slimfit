{
  "name": "slimfit",
  "version": "0.4.2",
  "description": "Slim library for fitting things",
  "author": "Krist Wongsuphasawat <krist.wongz@gmail.com> (http://kristw.yellowpigz.com)",
  "keywords": [],
  "license": "Apache-2.0",
  "main": "dist/slimfit.js",
  "files": [
    "src/*.*",
    "dist/*.*"
  ],
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-istanbul": "^2.0.1",
    "babel-preset-es2015": "^6.3.13",
    "babelrc-rollup": "^3.0.0",
    "browser-sync": "~2.14.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.12.0",
    "eslint-plugin-jasmine": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.2.0",
    "eslint-plugin-react": "^5.0.1",
    "gh-pages": "^0.11.0",
    "jasmine-core": "~2.4.1",
    "karma": "~0.13.15",
    "karma-coverage": "~0.5.3",
    "karma-jasmine": "~0.3.6",
    "karma-phantomjs-launcher": "^1.0.1",
    "karma-rollup-plugin": "^0.2.4",
    "karma-spec-reporter": "~0.0.23",
    "lodash-es": "^4.16.4",
    "pkgfiles": "^2.3.0",
    "rollup": "^0.34.7",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-node-resolve": "^2.0.0",
    "uglifyjs": "^2.4.10"
  },
  "scripts": {
    "gh-pages": "npm run build && gh-pages -d dist",
    "register-bower": "bower register slimfit git://github.com/kristw/slimfit",
    "browser-sync": "browser-sync start --server 'dist' --browser \"Google Chrome\" --files \"dist/**/*.*\" --port 7000",
    "test": "NODE_ENV=test karma start --single-run",
    "tdd": "NODE_ENV=test karma start",
    "eslint": "eslint --ignore-path .gitignore \"src/**/*.@(js|jsx)\"",
    "eslint-fix": "eslint --fix --ignore-path .gitignore \"src/**/*.@(js|jsx)\"",
    "preversion": "npm run test",
    "version": "npm run build && git add -A dist",
    "postversion": "git push ; git push --tags; pkgfiles",
    "prepublish": "pkgfiles",
    "rollup": "rollup -c",
    "build": "npm run rollup && uglifyjs dist/slimfit.js -m -c > dist/slimfit.min.js"
  },
  "repository": "kristw/slimfit",
  "bugs": {
    "url": "https://github.com/kristw/slimfit/issues"
  }
}
